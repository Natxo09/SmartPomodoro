---
import Layout from '../layouts/Layout.astro';
import Timer from '../components/timer.astro';
import Tasks from '../components/tasks.astro';
import Music from '../components/music.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Pomodoro">
    <!-- BotÃ³n de tema estilo Apple/Cozy -->
    <button
        id="theme-toggle"
        class="fixed top-4 right-4 p-3 rounded-full
               bg-white/60 dark:bg-black/60
               backdrop-blur-xl
               hover:bg-white/80 dark:hover:bg-neutral-900/80
               shadow-sm dark:shadow-none
               transition-all duration-300
               border border-white/20 dark:border-neutral-800/30
               z-50
               group"
        aria-label="Toggle theme"
    >
        <svg
            id="sun-icon"
            class="w-5 h-5 hidden dark:block text-amber-300/90 transition-transform duration-300 group-hover:rotate-12"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
            />
        </svg>
        <svg
            id="moon-icon"
            class="w-5 h-5 block dark:hidden text-neutral-700/90 transition-transform duration-300 group-hover:-rotate-12"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
            />
        </svg>
    </button>

    <main class="min-h-screen flex flex-col items-center justify-center">
        <Timer />
        <Tasks />
        <Music />
        <Footer />
    </main>
</Layout>

<script>
    import { setupTheme } from '../utils/theme';
    
    document.addEventListener('DOMContentLoaded', () => {
        setupTheme();
        document.getElementById('theme-toggle')?.addEventListener('click', () => window.toggleTheme());
    });
</script>